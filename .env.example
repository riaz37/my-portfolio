# App Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
NODE_ENV=development

# Database Configuration
DATABASE_URL="mongodb://localhost:27017/portfolio"
MONGODB_URI="mongodb+srv://your-username:your-password@your-cluster.mongodb.net/your-database?retryWrites=true&w=majority"

# Authentication (NextAuth.js)
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret-key # Generate using: openssl rand -base64 32

# OAuth Providers
# GitHub
GITHUB_ID=your-github-oauth-app-id
GITHUB_SECRET=your-github-oauth-app-secret

# Google
GOOGLE_ID=your-google-oauth-client-id
GOOGLE_SECRET=your-google-oauth-client-secret

# Email Configuration (SMTP)
EMAIL_SERVER_HOST=smtp.gmail.com
EMAIL_SERVER_PORT=587
EMAIL_SERVER_USER=your-email@gmail.com
EMAIL_SERVER_PASSWORD=your-app-specific-password
EMAIL_FROM=your-email@gmail.com

# API Keys
# Cloudinary (Image Upload)
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret
CLOUDINARY_UPLOAD_PRESET=your-upload-preset

# GitHub Integration
GITHUB_TOKEN=your-github-personal-access-token
GITHUB_USERNAME=your-github-username

# Analytics
NEXT_PUBLIC_GA_MEASUREMENT_ID=your-google-analytics-id
NEXT_PUBLIC_POSTHOG_KEY=your-posthog-key
NEXT_PUBLIC_POSTHOG_HOST=your-posthog-host

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000 # 15 minutes in milliseconds

# Security
CORS_ORIGINS="http://localhost:3000,https://your-production-domain.com"
API_SECRET_KEY=your-api-secret-key

# Feature Flags
NEXT_PUBLIC_ENABLE_BLOG=true
NEXT_PUBLIC_ENABLE_NEWSLETTER=true
NEXT_PUBLIC_ENABLE_COMMENTS=true

# Content Configuration
NEXT_PUBLIC_MAX_BLOG_POSTS_PER_PAGE=10
NEXT_PUBLIC_DEFAULT_LANGUAGE=en

# Cache Configuration
REDIS_URL=redis://localhost:6379
CACHE_TTL=3600 # 1 hour in seconds

# Search (Optional - if implementing search functionality)
ALGOLIA_APP_ID=your-algolia-app-id
ALGOLIA_SEARCH_KEY=your-algolia-search-key
ALGOLIA_ADMIN_KEY=your-algolia-admin-key
ALGOLIA_INDEX_NAME=your-algolia-index-name

# Newsletter Integration (Optional)
MAILCHIMP_API_KEY=your-mailchimp-api-key
MAILCHIMP_LIST_ID=your-mailchimp-list-id
MAILCHIMP_API_URL=https://xxx.api.mailchimp.com/3.0

# Comments System (Optional)
NEXT_PUBLIC_COMMENTS_SYSTEM=giscus # or disqus
GISCUS_REPO=your-username/your-repo
GISCUS_REPO_ID=your-repo-id
GISCUS_CATEGORY=Announcements
GISCUS_CATEGORY_ID=your-category-id

# Development Tools
NEXT_PUBLIC_SHOW_LOGGER=false
NEXT_PUBLIC_API_MOCKING=false
